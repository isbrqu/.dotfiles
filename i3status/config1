general {
    colors = true
    interval = 1
}

order += "wireless _first_"
order += "ethernet _first_"
order += "read_file BRI"
order += "tztime local"

wireless _first_ {
    format_up = " W:UP "
    format_down = " W:DOWN "
}

ethernet _first_ {
    format_up = " E:UP "
    format_down = " E:DOWN "
}

tztime local {
    format = " %H:%M | %d-%m-%Y |"
}

