" GENERAL
set nocompatible
set noswapfile
set ttyfast

" SECURITY
set nomodeline

set noerrorbells

set fileformats=unix
set encoding=utf-8
set fileencoding=utf-8

" VIEW
syntax on
set ruler
set showcmd
set showmatch
" line
set nowrap
set number
set relativenumber
set colorcolumn=80
autocmd FileType gitcommit setlocal colorcolumn=51
autocmd FileType fugitive setlocal colorcolumn=
" eliminate white flicker
set t_vb=
autocmd InsertEnter,InsertLeave * set cul!

" CHARS
set listchars=eol:↲,tab:↦\ ,extends:…,space:⋅

" TAB
set tabstop=8
set softtabstop=4
set shiftwidth=4
set expandtab
set autoindent

" UNDO
set undofile
set undodir=~/.vim/undodir

" VIMINFO
" maximum number of previously edited files for which the marks are remembered
set viminfo='10
" maximum number of lines saved for each register.
set viminfo+=<50
" convert the text in the viminfo file from the 'encoding'
set viminfo+=c
" maximum size of an item in Kbyte.
set viminfo+=s10
" disable the effect of 'hlsearch' when loading the viminfo file
set viminfo+=h
" name of file
set viminfo+=n~/.vim/info-private
" maximum number of items in the search pattern history to be saved
" set viminfo+=/10
" maximum number of items in the command-line history to be saved
" set viminfo+=:10
" maximum number of items in the input-line history to be saved
" set viminfo+=@10
" the command-lines that you enter are remembered in a history table
set history=6

" SEARCH
set hlsearch
set incsearch

" CLIPBOARD
set clipboard=unnamedplus

" STATUS BAR
set statusline=\ \ %<%f\ %h%m%r%h%w%y\ \-\ %{&ff}%=%k\ [%c\,%l]
set laststatus=2

" WINDOW
" default vertical split right
set splitright
" view divisor
set fillchars=fold:-,vert:\│
highlight VertSplit ctermfg=Black ctermbg=DarkGray

set rtp+=~/.config/fzf

" OTHERS
let mapleader=' '
set keywordprg=''

" NORMAL
" quit
nnoremap <leader>q <esc>:quit<cr>
" switch command-line
nnoremap <f4> :
" move
noremap <leader>j <c-d>
noremap <leader>k <c-u>
" window
noremap <f2> <c-w>
" tab
noremap <silent> <up> gt
noremap <silent> <down> gT
" buffer
noremap <silent> <left> :bn<cr>
noremap <silent> <right> :bN<cr>
noremap <silent> <leader>l :bn<cr>
noremap <silent> <leader>h :bN<cr>
" disable
noremap <f1> <nop>
" search
noremap <leader>/ :noh<cr>
" replace
noremap <leader>; :%s//g<left><left>
" fzf
nnoremap <silent> <leader><leader> <esc>:GFiles<cr>
nnoremap <silent> <leader>b <esc>:Buffers<cr>
nnoremap <silent> <leader>g <esc>:Commits<cr>
nnoremap <silent> <leader>fh <esc>:Helptags<cr>
" config reload
nnoremap <silent> <f11> <esc>:source ~/.vim/vimrc<cr>
" switch insert
nnoremap ga A
" reload
nnoremap <silent> <leader>e <esc>:edit<cr>
" fugitive
autocmd FileType fugitive
    \ nnoremap <buffer> <leader>p <esc>:Git<space>push<cr>
autocmd FileType fugitive
    \ nnoremap <buffer> <leader>P <esc>:Git<space>push<space>-f<cr>

" INSERT
" disable
inoremap <f1> <nop>
" autocomplete
inoremap <expr> <tab> pumvisible() ? "\<c-n>" : "\<tab>"
inoremap <expr> <s-tab> pumvisible() ? "\<c-p>" : "\<s-tab>"
inoremap <expr> <cr> pumvisible() ? "\<c-y>" : "\<cr>"

" TERMINAL
" general
tnoremap <f2> <c-w>
" switch normal
tnoremap <f1> <c-w>N
" switch command-line
tnoremap <f4> <c-w>:

" AUTOSAVE
" enable AutoSave on Vim startup
let g:auto_save = 1
" do not display the auto-save notification
let g:auto_save_silent = 1

" COMMENTARY
autocmd FileType vim setlocal commentstring=\"\ %s
autocmd FileType python setlocal commentstring=#\ %s
autocmd FileType sh setlocal commentstring=#\ %s
autocmd FileType tmux setlocal commentstring=#\ %s
autocmd FileType conf setlocal commentstring=#\ %s

set t_Co=8
highlight StatusLine ctermfg=238 ctermbg=white
highlight StatusLineNC ctermfg=237 ctermbg=white

" FZF
" See `man fzf-tmux` for available options
if exists('$TMUX')
  let g:fzf_layout = { 'tmux': '-p90%,60%' }
else
  let g:fzf_layout = { 'window': { 'width': 0.9, 'height': 0.6 } }
endif

